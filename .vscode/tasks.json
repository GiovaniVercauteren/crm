{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-frontend",
      "type": "npm",
      "script": "dev",
      "path": "frontend/",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*(starting|compiling).*",
          "endsPattern": ".*(Ready|ready) in .*"
        },
        "pattern": {
          "regexp": "^.*"
        }
      }
    }
  ]
}
